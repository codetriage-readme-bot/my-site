#pic_show.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel.heading.pic_image
        = image_tag @pic.image.url
      .panel-body
        %h1= @pic.title
        %p= @pic.description
      .panel-footer
        .row
          .col-md-6
            %p.user
              by
              = @pic.user.email
          .col-md-6
            .btn-group.pull-right
              - if user_signed_in? and current_user.is_admin
                = link_to 'Fix It', edit_pic_path(@pic), class: "btn btn-info"
                = link_to 'Delete', pics_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"
