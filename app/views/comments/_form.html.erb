<%= form_for([@post, @comment]) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="form-group">
    <!-- <%= f.label :post_id %><br> -->
    <%= f.number_field :post_id, class: "form-control", value: @post.id, type: "hidden" %>
    <p><strong> Post #<%= @post.id %>:</strong> <%= @post.title %> </p>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="actions">
    <span class="nav navbar-nav navbar-left">
      <%= f.submit 'Create/Update Comment', class: "btn btn-default" %>
    </span>
    <span class="nav navbar-nav navbar-right">
      <%= link_to 'Cancel', post_path(@post), class: "btn btn-default" %>
    </span>
  </div>
<% end %>
