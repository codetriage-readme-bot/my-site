<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <!--<thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>-->

  <tbody>
    <% @posts.each do |post| %>
      <tr class="panel panel-primary">
        <tr><td><h4><%= post.title %></h4></td></tr>
        <tr><td><%= post.body %></td></tr>
        <tr>
          <td></td>
          <td class="col-md-1"><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-lg" %>
<%= link_to 'Back to Dashboard', root_path, class: "btn btn-primary btn-lg" %>
